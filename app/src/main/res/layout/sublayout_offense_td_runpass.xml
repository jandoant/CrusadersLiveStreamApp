<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_chooseRunOrPass_offense"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible">

    <Button
        android:id="@+id/btn_pass_offense"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:elevation="0dp"
        android:text="Pass"
        android:textColor="@color/pinkA400"
        android:theme="@style/PassButton" />

    <Button
        android:id="@+id/btn_run_offense"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="Run"
        android:textColor="@color/greenA400"
        android:theme="@style/RunButton" />
</LinearLayout>