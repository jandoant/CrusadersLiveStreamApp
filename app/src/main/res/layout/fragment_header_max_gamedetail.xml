<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueGrey200"
    android:padding="16dp">
    >

    <TextView
        android:id="@+id/tv_gamedate_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="Sonntag, 17.04.2015"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_gametime_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_gamedate_gamedetail"
        android:layout_alignRight="@+id/tv_gamedate_gamedetail"
        android:layout_below="@+id/tv_gamedate_gamedetail"
        android:text="15:00 Uhr"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/tv_team_away_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_punkte_away_gamedetail"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_punkte_away_gamedetail"
        android:layout_marginTop="110dp"
        android:gravity="left"
        android:text="Magdeburg Virgin Guards"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=" - "
        android:textSize="48sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_punkte_home_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView10"
        android:text="18"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_punkte_away_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textView10"
        android:text="24"
        android:textSize="48sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_quarter_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="QUARTER 4"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_team_home_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_punkte_home_gamedetail"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_punkte_home_gamedetail"
        android:layout_marginTop="110dp"
        android:gravity="right"
        android:text="Radebeul Suburbian Foxes"
        android:textSize="12sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_gameid_gamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="GameID"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    />

</RelativeLayout>